<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_player_container"
            android:layout_width="160dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/pv_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBlack"
                app:resize_mode="fixed_width"
                app:show_buffering="when_playing" />

        <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:indeterminate="false"
                android:indeterminateTint="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <com.yhy.mz.tv.widget.SilenceTimeBar
                android:id="@+id/tb_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:played_color="@color/colorPrimary"
                app:bar_height="1dp"
                app:ad_marker_width="0dp"
                app:touch_target_height="1dp"
                app:unplayed_color="@android:color/black"
                app:buffered_color="@android:color/darker_gray" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>